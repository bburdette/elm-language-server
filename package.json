{
  "name": "elm-language-server",
  "description": "Implementation of an elm language server in node.",
  "version": "1.0.0",
  "author": "Kolja Lampe",
  "license": "MIT",
  "engines": {
    "node": "*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elm-tooling/elm-language-server"
  },
  "dependencies": {
    "elm-analyse": "^0.16.4",
    "fast-diff": "^1.2.0",
    "request": "^2.88.0",
    "vscode-languageserver": "^5.2.1",
    "vscode-uri": "^1.0.6",
    "web-tree-sitter": "^0.15.5",
    "ws": "^6.2.1"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/node": "12.0.2",
    "@types/request": "^2.48.1",
    "@types/ws": "^6.0.1",
    "prettier": "^1.17.1",
    "tree-sitter-cli": "^0.15.2",
    "tree-sitter-elm": "^2.3.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "3.4.5"
  },
  "scripts": {
    "copy-wasm": "cp ./src/tree-sitter-elm.wasm ./out/",
    "compile": "npm run copy-wasm && tsc -p ./",
    "watch": "npm run copy-wasm && tsc -watch -p ./",
    "lint": "tslint -p tsconfig.json",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "build-tree-sitter": "tree-sitter build-wasm ./node_modules/tree-sitter-elm"
  },
  "bin": {
    "elm-language-server": "./out/index.js"
  }
}
